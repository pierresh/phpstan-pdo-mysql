{
    "name": "pierresh/phpstan-pdo-mysql",
    "description": "PHPStan rules for validating PDO/MySQL code: SQL syntax, parameter bindings, and SELECT columns matching PHPDoc types",
    "type": "phpstan-extension",
    "license": "MIT",
    "keywords": ["phpstan", "pdo", "mysql", "static-analysis", "sql-validation"],
    "authors": [
        {
            "name": "Pierre Clavequin"
        }
    ],
    "require": {
        "php": "^8.1",
        "phpstan/phpstan": "^1.10",
        "sqlftw/sqlftw": "^0.1"
    },
    "require-dev": {
        "carthage-software/mago": "^1.0.0-beta",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^10.0",
        "rector/rector": "^1.2",
        "spatie/phpunit-watcher": "^1.24"
    },
    "autoload": {
        "psr-4": {
            "Pierresh\\PhpStanPdoMysql\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Pierresh\\PhpStanPdoMysql\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit-watcher watch",
        "test:run": "./vendor/bin/phpunit",
        "stan": "./vendor/bin/phpstan analyze src -c phpstan.neon --error-format=table --no-progress --memory-limit=512M",
        "analyze": "./vendor/bin/phpstan analyze -c extension.neon --level=max ./src",
        "refactor": "./vendor/bin/rector process src tests",
        "refactor:dry": "./vendor/bin/rector process src tests --dry-run",
        "format": "./vendor/bin/mago format src tests",
        "format:check": "./vendor/bin/mago format --dry-run src tests",
        "lint": "./vendor/bin/mago lint src tests",
        "mago:analyze": "./vendor/bin/mago analyze src tests",
        "quality": [
            "@stan",
            "@refactor:dry",
            "@format",
            "@test:run"
        ],
        "quality:fix": [
            "@stan",
            "@refactor",
            "@format",
            "@test:run"
        ]
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "carthage-software/mago": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
